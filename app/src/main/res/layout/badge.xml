    android:layout_height="@dimen/toolbar_badge_size">
    <ImageView
        android:layout_width="@dimen/toolbar_badge_size"
        android:layout_height="@dimen/toolbar_badge_size"
        android:layout_gravity="center"
        android:background="@color/pnx_white_35" />

    <ImageView
        android:id="@+id/toolbar_item_badge"
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="@color/main_orange" />
</FrameLayout>

