<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/toolbar_badge_height_and_width"
        android:layout_height="@dimen/toolbar_badge_height_and_width"
        android:src="@drawable/ic_pro_tool"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="@dimen/toolbar_badge_height_and_width"
        android:layout_height="@dimen/toolbar_badge_height_and_width"
        android:textSize="@dimen/toolbar_badge_text_size"
        android:textColor="@color/pnx_black"
        android:letterSpacing="-0.05"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/ic_pro_tool"
        android:text="PRO"
        tools:ignore="SmallSp" />

</FrameLayout>